{
  "name": "dimensional-ui",
  "version": "1.0.0",
  "description": "A Vue.js component library for Playful Dimensional Minimalism - sticker-like components with bold shadows and bright colors",
  "type": "module",
  "main": "./dist/dimensional-ui.umd.cjs",
  "module": "./dist/dimensional-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/dimensional-ui.js",
      "require": "./dist/dimensional-ui.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --config vite.config.dev.js",
    "build": "vite build && npm run build:types",
    "build:types": "vue-tsc --project tsconfig.build.json",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "type-check": "vue-tsc --noEmit",
    "lint": "echo 'Linting will be configured in later tasks'",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "vue",
    "vue3",
    "component-library",
    "ui-library",
    "design-system",
    "dimensional",
    "minimalism",
    "sticker",
    "shadows",
    "playful"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dimensional-ui.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/dimensional-ui/issues"
  },
  "homepage": "https://github.com/yourusername/dimensional-ui#readme",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/test-utils": "^2.0.0",
    "jsdom": "^27.0.0",
    "typescript": "^4.9.0",
    "vite": "^4.0.0",
    "vitest": "^0.28.0",
    "vue": "^3.0.0",
    "vue-tsc": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}